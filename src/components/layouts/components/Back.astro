---
const { title, back = { enabled: false, path: undefined }} = Astro.props
---

<header class="position-relative">
  <a
    onclick="this.href !== undefined && window.history.back()"
    class:list={["p-2 pt-1 position-absolute top-0 start-0 border border-primary rounded", { "d-none": !back.enabled  }]}
    href={back.path}>
    <svg
      xmlns="http://www.w3.org/2000/svg"
      width="32"
      height="32"
      fill="currentColor"
      class="bi bi-arrow-left"
      viewBox="0 0 16 16">
      <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8"/>
    </svg>
  </a>

  <h1 id="main-title" class="mt-3 text-center text-primary">{title}</h1>

  <div class="p-2 pt-1 position-absolute top-0 end-0">
    <slot />
  </div>
</header>

<hr class="w-50 mt-0 mx-auto border border-primary" />
